{% extends 'base.html.twig' %}

{% block title %}Gestion Commandes{% endblock %}

{% block body %}

<div class="container">
    <h1 class="text-center my-4">Gestion des réservations</h1>

    <table class="table table-dark">
        <thead>
            <tr>
                {% for data in colonnes %}
                    <th>{{ data }}</th>
                {% endfor %}
                <th>Option</th>
            </tr>
        </thead>
        <tbody>
            {% for commande in commandes %}
            <tr>
                <td>{{ commande.id }}</td>    
                <td>{{ commande.user }}</td>    
                <td>{{ commande.vehicule }}</td>    
                <td>{{ commande.dateHeureDepart }}</td>    
                <td>{{ commande.dateHeureFin }}</td>    
                <td>{{ commande.prixTotal }}</td>    
                <td>{{ commande.dateEnregistrement|date("d/m/Y à H:i:s") }}</td> 
                <td>
                    {# <a href="{{ path('edit_', {id: commande.id}) }}" class="text-warning"><i class="fa fa-edit"></i></a>
                    <a href="{{ path('delete_vehicule', {id: commande.id}) }}" class="text-danger"><i class="fa fa-trash"></i></a> #}
                </td>   
            </tr>
            {% endfor %}
        </tbody>
    </table>
</div>

{% endblock %}