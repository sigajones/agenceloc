{% extends 'base.html.twig' %}

{% block title %}Gestion Membres{% endblock %}

{% block body %}
    {% for message in app.flashes('success') %}
        <div class="alert alert-success text-center w-50 mx-auto my-2">{{ message }}</div>
    {% endfor %}

<div class="container">
    <h1 class="text-center my-4">Gestion des membres</h1>

    <table class="table table-dark">
        <thead>
            <tr>
                {% for data in colonnes %}
                    <th>{{ data }}</th>
                {% endfor %}
                <th>Option</th>
            </tr>
        </thead>
        <tbody>
            {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>    
                <td>{{ user.username }}</td>    
                <td>
                    {% for role in user.roles %}
                        {{ role }}{% if not loop.last %}, {% endif %}
                    {% endfor %}
                </td>
                <td>{{ user.password }}</td>    
                <td>{{ user.nom }}</td>    
                <td>{{ user.prenom }}</td>    
                <td>{{ user.email }}</td>      
                <td>{{ user.civilite }}</td>      
                <td>{{ user.dateEnregistrement|date("d/m/Y Ã  H:i:s") }}</td> 
                <td>
                    <a href="" class="text-warning"><i class="fa fa-edit"></i></a>
                    <a href="" class="text-danger"><i class="fa fa-trash"></i></a>
                </td>   
            </tr>
            {% endfor %}
        </tbody>
    </table>
</div>

{% endblock %}